<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".core.MainActivity">

    <Button
        android:id="@+id/button_hoctuvung"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_button"
        android:text="Học từ vựng" />

    <Button
        android:id="@+id/button_baitap"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_button2"
        android:text="Bài tập" />

    <Button
        android:id="@+id/button_kiemtra"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_button"
        android:text="Kiểm tra" />

    <Button
        android:id="@+id/button_hotrohoctapkhac"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/background_button2"
        android:text="Hỗ trợ \nhọc tập khác" />


</LinearLayout>