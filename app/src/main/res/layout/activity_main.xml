<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical"
    tools:context=".core.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_learn"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/main_button_bg_green"
                android:text="Học từ vựng"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_exercise"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/main_button_bg_yellow"
                android:text="Bài tập"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:id="@+id/tv_exam"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/main_button_bg_red"
                android:text="Kiểm tra"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_support"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:paddingHorizontal="30dp"
                android:background="@drawable/main_button_bg_blue"
                android:text="Hỗ trợ học tập khác"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/menu_bottom"/>

</RelativeLayout>